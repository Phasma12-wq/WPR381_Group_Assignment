<!-- Include shared header partial-->
<%- include('../partials/header') %>

<!-- CSS Link -->
<link rel="stylesheet" href="/css/style.css">

<!-- About Us Section -->
<section class="intro-section">
    <br>
    <h2 class="intro-title">WE ARE StreetSync</h2>
    <img src="/images/pit-stop-precision-stockcake.jpg" alt="Intro Image" class="intro-image">
    <div class="intro-text-block">
    <h3>ABOUT US</h3>
    <hr>
    <p>
        Welcome to StreetSync
        <br>
        <br>
        Your go-to hub for all things racing. Built by car lovers, for car lovers, our portal is dedicated to keeping the racing community connected and in the loop.

        Whether you’re a weekend warrior, a die-hard motorsport fan, or just discovering the thrill of the track, StreetSync makes it easy to stay up to speed. We offer a streamlined way to explore upcoming race events, view essential details, and sync your calendar with the latest happenings.

        We’re here to drive the community forward, one event at a time.
    </p>
    <br>
    <hr>
    </div>
</section>


<!-- OUR TEAM -->
    <section class="team-section">
    <h2 class="section-title">OUR PIT CREW</h2>

    <!-- Renders the team member section at the bottom of the page -->
    <div class="team-grid">

        <% data.forEach(member => { %>
            <div class="team-card">
                <img src="<%= member.image %>" alt="Team Member <%= member.number %>">
                <div class="team-info">
                    <h3><%= member.name %></h3>
                    <p><%= member.role %></p>
                </div>
            </div>
        <% }) %>

    </div>
    </section>

<!-- Include shared footer partial -->
<%- include('../partials/footer') %>
